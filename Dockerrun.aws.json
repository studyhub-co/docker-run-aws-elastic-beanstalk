{
  "AWSEBDockerrunVersion": "3",
  "volumes": [
    {
      "name": "docker.sock",
      "host": {
        "sourcePath": "/var/run/docker.sock"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "docker-run",
      "image": "glot/docker-run:latest",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 8088,
          "containerPort": 8088
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "docker.sock",
          "containerPath": "/var/run/docker.sock"
        }        
      ]
    }
  ]
}